@model IEnumerable<WeatherApplication.Models.Widget>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WidgetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Settings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WidgetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Settings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WidgetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WidgetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WidgetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
